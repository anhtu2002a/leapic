<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradien"
    >


    <ImageView
        android:id="@+id/img"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="300dp"
        app:srcCompat="@drawable/gameicon" />
    <!-- Offline -->
    <FrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="239dp"
        android:layout_marginStart="50dp"
        android:background="@color/colorTrans">

        <View
            android:layout_width="267dp"
            android:layout_height="50dp"
            android:background="@drawable/background_shadows_button" />
    </FrameLayout>

    <FrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="300dp"
        android:layout_height="50dp"

        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="240dp"
        android:layout_marginStart="51dp"
        android:background="@color/colorTrans">

        <View
            android:layout_width="265dp"
            android:layout_height="49dp"
            android:background="@drawable/background_button" />

        <Button
            android:id="@+id/btnSingle"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:background="@color/colorTrans"
            android:text="Chơi Đơn"
            android:textColor="@color/colorWhite" />
    </FrameLayout>
    <!-- Online -->
    <FrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="159dp"
        android:layout_marginStart="50dp"
        android:background="@color/colorTrans">

        <View
            android:layout_width="267dp"
            android:layout_height="50dp"
            android:background="@drawable/background_shadows_button" />
    </FrameLayout>

    <FrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="300dp"
        android:layout_height="50dp"

        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="160dp"
        android:layout_marginStart="51dp"
        android:background="@color/colorTrans">

        <View
            android:layout_width="265dp"
            android:layout_height="49dp"
            android:background="@drawable/background_button" />

        <Button
            android:id="@+id/btnOnline"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:background="@color/colorTrans"
            android:text="Thách Đấu"
            android:textColor="@color/colorWhite" />
    </FrameLayout>
    <!-- Bảng XH -->
    <FrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="79dp"
        android:layout_marginStart="50dp"
        android:background="@color/colorTrans">

        <View
            android:layout_width="267dp"
            android:layout_height="50dp"
            android:background="@drawable/background_shadows_button" />
    </FrameLayout>

    <FrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="300dp"
        android:layout_height="50dp"

        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="80dp"
        android:layout_marginStart="51dp"
        android:background="@color/colorTrans">

        <View
            android:layout_width="265dp"
            android:layout_height="49dp"
            android:background="@drawable/background_button" />

        <Button
            android:id="@+id/btnHightscore"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:background="@color/colorTrans"
            android:text="Bảng Xếp Hạng"
            android:textColor="@color/colorWhite" />
    </FrameLayout>

</RelativeLayout>